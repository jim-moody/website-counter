{
  "name": "Website Counter",
  "version": "1.0",
  "description": "Counts the number of sites you have visited.",
  "permissions": ["history"],
  "page_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon-counter16.png",
      "32": "images/icon-counter32.png",
      "48": "images/icon-counter48.png"
    }
  },
  "icons": {
    "16": "images/icon-counter16.png",
    "32": "images/icon-counter32.png",
    "48": "images/icon-counter48.png"
  },
  "manifest_version": 2
}
